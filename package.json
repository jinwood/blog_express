    "meta-marked": "^0.4.2",
    "moment": "^2.17.1",
    "morgan": "^1.8.1",
    "node-markdown": "^0.1.1",
    "nodemailer": "^3.1.3",
    "nodemon": "^1.11.0",
    "stylus": "^0.54.5",
    "winston": "^2.3.1"
  }
